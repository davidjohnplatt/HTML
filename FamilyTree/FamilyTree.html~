       <script type="text/javascript">
            function popWindow(name,dob,dod,photo,pdate) {
               sessionStorage.setItem("NAME",name)
               sessionStorage.setItem("DOB",dob)
               sessionStorage.setItem("DOD",dod)
               sessionStorage.setItem("PHOTO",photo)
               sessionStorage.setItem("PDATE",pdate)
               var newWindow = window.open("newWindow.html", "_blank", "top=100, left=100, width=800, height=500");
              
            }

          

        </script>
